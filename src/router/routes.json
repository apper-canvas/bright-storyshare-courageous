{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/library": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Library requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
