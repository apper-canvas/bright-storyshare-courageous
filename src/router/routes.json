{
"/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to access main app",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/library": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view library",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/reading-lists": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view reading lists",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/following": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view followed authors",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/write": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to write",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/write/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to write",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/story/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Stories are public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/notifications": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view notifications",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/prompt-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/reset-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  }
}